<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontal_margin_2x"
                android:layout_marginTop="@dimen/vertical_margin_4x"
                android:text="@string/create_exercice_title"
                android:textColor="@color/laranja_escuro"
                android:textSize="@dimen/text_size_title_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_2x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

                <ImageView
                    android:id="@+id/imageSelected"
                    android:visibility="gone"
                    android:background="@color/black"
                    android:layout_width="@dimen/image_selected_width"
                    android:layout_height="@dimen/image_selected_height"/>

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="@dimen/image_selected_width"
                    android:layout_height="@dimen/image_selected_height"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/vertical_margin_2x">

                    <ImageView
                        android:layout_width="@dimen/ic_galery_height"
                        android:layout_height="@dimen/ic_galery_height"
                        android:src="@drawable/ic_galery" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/horizontal_margin_2x"
                        android:text="@string/create_exercice_text_galery" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_text_exercice_name_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontal_margin_2x"
                android:layout_marginTop="@dimen/vertical_margin_2x"
                android:gravity="center"
                android:hint="@string/create_exercice_name"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_exercice_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="password"
                    android:ellipsize="start"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/edit_text_age"
                    android:singleLine="true"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/text_input_default" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_text_create_exercice_description_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_2x"
                android:layout_marginHorizontal="@dimen/horizontal_margin_2x"
                android:gravity="center"
                android:hint="@string/create_exercice_description"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_exercice_name_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_create_exercice_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="password"
                    android:ellipsize="start"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/edit_text_age"
                    android:singleLine="true"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/text_input_default" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- FloatingActionButton -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin_5x"
        android:backgroundTint="@color/laranja_claro"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="@dimen/default_button_width"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/vertical_margin_5x"
        android:layout_marginHorizontal="@dimen/horizontal_margin_5x"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/laranja_escuro"
        android:padding="@dimen/vertical_margin_2x"
        android:text="@string/create_exercice_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>