<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/black" >

    <item>

        <selector>

            <item android:state_enabled="true" android:state_pressed="false" android:state_focused="true" >
                <shape android:shape="rectangle">
                    <solid android:color="@color/laranja" />
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item android:state_enabled="true" android:state_pressed="false" android:state_selected="true" >
                <shape android:shape="rectangle">
                    <solid android:color="@color/laranja" />
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/cinza" />
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/laranja_claro" />
                    <corners android:radius="3dp" />
                </shape>
            </item>

        </selector>

    </item>

</ripple>